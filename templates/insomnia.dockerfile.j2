{% include './base_images/ubuntu.latest.j2' %}

RUN apt-get -y update && apt-get -y upgrade

RUN apt-get -y install apt-transport-https curl libgbm1 libasound2

WORKDIR /insomnia

RUN curl -L https://github.com/Kong/insomnia/releases/download/core%402023.1.0/Insomnia.Core-2023.1.0.deb -o insomnia.deb

# WARNING, this takes a veeery long time
RUN apt-get -y install ./insomnia.deb

RUN adduser insomnia

USER insomnia

CMD ["insomnia"]